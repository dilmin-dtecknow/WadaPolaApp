<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayoutWorker1">

<!--    content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_layout_nav_worker1">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarNavWorker1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/theam_color"
            app:navigationIcon="@drawable/navigation"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayoutNavWorker1">

            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container_view_nav_worker1"/>

        </FrameLayout>


    </LinearLayout>
<!--    content-->


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewWorker1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu_worker"
        app:headerLayout="@layout/nav_header_cus"/>
</androidx.drawerlayout.widget.DrawerLayout>