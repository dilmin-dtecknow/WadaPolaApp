<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".customer.SellerSingleViewActivity">

    <TextView
        android:id="@+id/textViewSingle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/barlow_condensed_black"
        android:text="Janith Iddamalgoda"
        android:textColor="@color/c1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSingle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Meson"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSingle1"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingle1" />

    <FrameLayout
        android:id="@+id/frameLayoutSingle1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_background_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingle2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logoImageViewSingle1"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_splash"
            app:shapeAppearanceOverlay="@style/roundedImageView" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollViewSingle1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutSingle1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_single"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/c1"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider_single"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="25"
                    app:iss_period="2000"
                    app:iss_title_background="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewSingle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/barlow_condensed_black"
                android:text="@string/me"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/card_view_single"
                app:layout_constraintTop_toBottomOf="@+id/card_view_single" />

            <TextView
                android:id="@+id/textViewSellerSingleAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="about"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textViewSingle3"
                app:layout_constraintTop_toBottomOf="@+id/textViewSingle3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSingleView2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/c1"
                app:cardCornerRadius="25dp"
                app:cardElevation="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSellerSingleAbout">


                <TextView
                    android:id="@+id/textViewSellerSinglePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="1h=Rs:3000"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/editTextNumberDecimalSellerSingle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/c1"
                android:ems="10"
                android:fontFamily="@font/open_sans_bold"
                android:hint="@string/rateSingle"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewSingleView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardViewSingleView2"
                app:layout_constraintTop_toTopOf="@+id/cardViewSingleView2" />

            <Button
                android:id="@+id/SellerSingleBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c1"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/book1"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/cardViewSingleView2"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSingleView2" />

            <Button
                android:id="@+id/buttonSellerSinglePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/c4"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/pay1"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/editTextNumberDecimalSellerSingle"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimalSellerSingle" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:numStars="5"
                android:progressBackgroundTint="@color/toastColor"
                android:progressTint="@color/c1"
                android:rating="0"
                android:secondaryProgressTint="@color/c1"
                android:stepSize="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SellerSingleBookNow" />

            <TextView
                android:id="@+id/textViewRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="TextView"
                android:textColor="@color/c1"
                app:layout_constraintBottom_toBottomOf="@+id/ratingBar2"
                app:layout_constraintStart_toEndOf="@+id/ratingBar2"
                app:layout_constraintTop_toTopOf="@+id/ratingBar2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textViewSellerSingleProvinse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="TextView"
        android:textColor="@color/c2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewSingle2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSingle1" />

</androidx.constraintlayout.widget.ConstraintLayout>